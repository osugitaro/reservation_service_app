<div class="login_container">
  <div class="login_frame">
    <p class="login_text">新しいアカウントを作成</p>
    <div class="login_inner">
      <%= form_with(model:@user, url: {controller: 'registrations', action: 'create'})do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
        <div class="required"></div>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名", class: "login_field" %>
        </div>

      <div class="field">
        <div class="required"></div>
        <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "login_field" %>
      </div>

      <div class="field">
        <div class="required"></div>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)", class:"login_field" %>
      </div>

      <div class="field">
        <div class="required"></div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class:"login_field" %>
      </div>

      <div class="actions">
        <%= f.submit "新しいアカウントを作成", class:"submit" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
