 <div class="account_edit_container"> 
  <div class="account_edit_frame">
    <h2>アカウント編集</h2>
    <div class="account_edit_inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="account_edit_field">
          <%= f.label :email, "メールアドレス" %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
        <% end %>

        <div class="account_edit_field">
          <%= f.label :password %> <i>(変更する場合のみ入力 ※6字以上)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %>
        </div>

        <div class="account_edit_field">
          <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
          <%= f.password_field :password_cofirmation, autocomplete: "new-password", class: "input" %>
        </div>

        <div class="account_edit_field">
          <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
        </div>

        <div class="actions account_edit_field">
          <%= f.submit t('.update'), class:"submit" %>
        </div>
      <% end %>

      <h3><%= t('.cancel_my_account') %></h3>

      <p><%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %></p>

      <%= link_to t('devise.shared.links.back'), :back, class:"input back" %>
    </div>
 </div>
</div>