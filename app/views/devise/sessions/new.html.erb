<div class="login_container">
 <div class="login_frame">
  <p class="login_text">ログイン</p>
   <div class="login_inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class="required"></div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "login_field",required: true %>
      </div>

      <div class="field">
        <div class="required"></div>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "login_field",required: true %>
      </div>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
       <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name) %><br />
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class:"submit" %>
      </div>
    <% end %>
   </div>
 </div>  
</div>

